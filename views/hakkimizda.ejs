<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= lang === 'ar' ? 'rtl' : 'ltr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- __('site.title') %> - <%- __('nav.about') %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        [dir="rtl"] .md\:grid-cols-2 {
            direction: rtl;
        }
    </style>
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar') %>

    <!-- Vizyon ve Misyon -->
    <div class="container mx-auto px-6 py-16">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-center mb-12"><%- __('about.title') %></h1>
            <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
                <h2 class="text-2xl font-semibold mb-4"><%- __('about.vision.title') %></h2>
                <p class="text-gray-600 mb-8"><%- __('about.vision.description') %></p>
                
                <h2 class="text-2xl font-semibold mb-4"><%- __('about.mission.title') %></h2>
                <p class="text-gray-600 mb-8"><%- __('about.mission.description') %></p>

                <h2 class="text-2xl font-semibold mb-4"><%- __('about.values.title') %></h2>
                <ul class="list-disc list-inside text-gray-600 space-y-2">
                    <li><%- __('about.values.item1') %></li>
                    <li><%- __('about.values.item2') %></li>
                    <li><%- __('about.values.item3') %></li>
                    <li><%- __('about.values.item4') %></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Ekibimiz -->
    <div class="bg-gray-50 py-16">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center mb-4"><%- __('about.team.title') %></h2>
            <p class="text-gray-600 text-center max-w-3xl mx-auto mb-12">
                <%- __('about.team.description') %>
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16 max-w-5xl mx-auto">
                <!-- Avukat 1 -->
                <div class="text-center">
                    <img src="/images/avukat1.jpg" alt="<%- __('about.team.lawyer1.name') %>" class="w-56 h-56 object-cover rounded-lg shadow-lg mx-auto mb-6">
                    <h3 class="text-2xl font-bold mb-2"><%- __('about.team.lawyer1.name') %></h3>
                    <p class="text-lg text-gray-600 mb-4"><%- __('about.team.lawyer1.title') %></p>
                    <p class="text-gray-600"><%- __('about.team.lawyer1.description') %></p>
                </div>
                <!-- Avukat 2 -->
                <div class="text-center">
                    <img src="/images/avukat2.jpg" alt="<%- __('about.team.lawyer2.name') %>" class="w-56 h-56 object-cover rounded-lg shadow-lg mx-auto mb-6">
                    <h3 class="text-2xl font-bold mb-2"><%- __('about.team.lawyer2.name') %></h3>
                    <p class="text-lg text-gray-600 mb-4"><%- __('about.team.lawyer2.title') %></p>
                    <p class="text-gray-600"><%- __('about.team.lawyer2.description') %></p>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html> 
<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= lang === 'ar' ? 'rtl' : 'ltr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- __('site.title') %> - Makaleler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        [dir="rtl"] .md\:grid-cols-3 {
            direction: rtl;
        }
    </style>
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar') %>

    <div class="container mx-auto px-6 py-16">
        <h1 class="text-4xl font-bold text-center mb-12">Hukuki Makaleler</h1>

        <!-- Kategori Filtreleme -->
        <div class="mb-8">
            <select id="categoryFilter" class="w-full md:w-auto px-4 py-2 border rounded-lg focus:outline-none focus:border-gray-500">
                <option value="">Tüm Kategoriler</option>
                <option value="Ticaret Hukuku">Ticaret Hukuku</option>
                <option value="Aile Hukuku">Aile Hukuku</option>
                <option value="Ceza Hukuku">Ceza Hukuku</option>
                <option value="Miras Hukuku">Miras Hukuku</option>
                <option value="İş Hukuku">İş Hukuku</option>
                <option value="Borçlar Hukuku">Borçlar Hukuku</option>
            </select>
        </div>

        <!-- Makaleler Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% articles.forEach(article => { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden article-card" data-category="<%= article.category %>">
                    <div class="p-6">
                        <div class="text-sm text-gray-500 mb-2"><%= article.category %></div>
                        <h2 class="text-xl font-semibold mb-4"><%= article.title %></h2>
                        <p class="text-gray-600 mb-4"><%= article.content.substring(0, 150) %>...</p>
                        <div class="flex justify-between items-center">
                            <a href="/makale/<%= article._id %>" class="text-gray-900 font-semibold hover:text-gray-600 transition duration-300">
                                Devamını Oku →
                            </a>
                            <div class="text-sm text-gray-500">
                                <span><%= article.views %> görüntülenme</span>
                            </div>
                        </div>
                        <div class="mt-4 text-sm text-gray-500">
                            <span>Yazar: <%= article.author.username %></span>
                            <span class="mx-2">•</span>
                            <span><%= new Date(article.createdAt).toLocaleDateString('tr-TR') %></span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        document.getElementById('categoryFilter').addEventListener('change', function() {
            const selectedCategory = this.value;
            const articles = document.querySelectorAll('.article-card');
            
            articles.forEach(article => {
                if (!selectedCategory || article.dataset.category === selectedCategory) {
                    article.style.display = 'block';
                } else {
                    article.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html> 